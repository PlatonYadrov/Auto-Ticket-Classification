# Environment Configuration for Ticket Triage ML

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:8080
MLFLOW_EXPERIMENT_NAME=ticket-triage

# Model Configuration
MODEL_PATH=artifacts/model.onnx
TOKENIZER_PATH=artifacts/tokenizer
LABEL_MAPS_PATH=artifacts/label_maps.json

# Training Configuration
MAX_EPOCHS=10
BATCH_SIZE=16
LEARNING_RATE=1e-5

# Kaggle API (для загрузки датасета)
# Получите на https://www.kaggle.com/settings/account
KAGGLE_USERNAME=your_username
KAGGLE_KEY=your_api_key

# Logging
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Hardware
ACCELERATOR=auto  # auto, mps, cuda, cpu
PRECISION=32      # 32, 16-mixed
